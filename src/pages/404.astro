---
import Freepik404 from "components/Freepik404.astro";
import BasicHTMLLayout from "layouts/BasicHTMLLayout.astro";
import GoToHome from "components/GoToHome.astro";
---

<BasicHTMLLayout title="404: Invalid page">
  <div
    class="h-screen flex flex-col justify-center items-center mx-8 text-center"
  >
    <div class="w-4/5 max-w-lg mb-8">
      <Freepik404 />
    </div>
    <h1 class="text-4xl font-bold mb-4 font-mono">Invalid Page</h1>
    <p class="font-mono mb-4 text-lg">Looks like that page doesn't exist</p>
    <GoToHome />
  </div>
</BasicHTMLLayout>
